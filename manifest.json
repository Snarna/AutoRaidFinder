{
  "manifest_version": 2,

  "name": "AutoRaidFinder",

  "description": "Auto Find Raid & Enter & Battle",

  "version": "0.0.1",

  "icons":{
    "16" : "src/pic/icon2.png",
    "48" : "src/pic/icon2.png",
    "128" : "src/pic/icon2.png"
  },

  "browser_action": {
    "default_title": "ARF",
    "default_icon": "src/pic/icon2.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "background",
    "clipboardRead",
    "clipboardWrite",
    "notifications",
    "webRequest",
    "webRequestBlocking"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts":[
    {
      "all_frames": true,
      "matches": ["*://gbf.game.mbga.jp/*"],
      "js": ["src/js/jquery-2.2.3.min.js", "popup.js"]
    },
    {
      "matches": ["*://gbf-raidfinder.aikats.us/*"],
      "js": ["src/js/jquery-2.2.3.min.js", "popup.js"]
    }
  ]
}
