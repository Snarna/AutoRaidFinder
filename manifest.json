{
  "manifest_version": 2,

  "name": "AutoRaidFinder",
  "description": "Auto Find Raid & Enter & Battle",
  "version": "0.0.1",

  "browser_action": {
    "default_title": "ARF",
    "default_icon": "src/pic/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
  "scripts": ["background.js"],
  "persistent": true
  },
  "content_scripts":[
    {
      "all_frames": true,
      "matches": ["*://gbf.game.mbga.jp/*"],
      "js": ["src/js/jquery-2.2.3.min.js", "popup.js"]
    },
    {
      "matches": ["*://gbf-raidfinder.aikats.us/*"],
      "js": ["src/js/jquery-2.2.3.min.js", "popup.js"]
    }
  ]
}
