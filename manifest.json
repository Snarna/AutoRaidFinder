{
  "manifest_version": 2,

  "name": "AutoRaidFinder",

  "description": "Auto Find Raid & Enter & Battle",

  "version": "0.0.1",

  "icons":{
    "16" : "src/pic/icon2.png",
    "48" : "src/pic/icon2.png",
    "128" : "src/pic/icon2.png"
  },

  "browser_action": {
    "default_title": "ARF",
    "default_icon": "src/pic/icon2.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "background",
    "clipboardRead",
    "clipboardWrite",
    "notifications",
    "webRequestBlocking"
  ],

  "background": {
    "scripts": ["backgroundscript/background.js", "backgroundscript/rfcontroller.js", "backgroundscript/battlecontroller.js"],
    "persistent": true
  },

  "content_scripts":[
    {
      "all_frames": true,
      "matches": ["http://gbf.game.mbga.jp/*"],
      "js": ["src/js/jquery-2.2.3.min.js", "src/js/popup.js","gamecontentscript/statusupdater.js" ,"gamecontentscript/injector.js", "gamecontentscript/enterclass.js","gamecontentscript/battleclass.js" ,"gamecontentscript/gamemain.js"]
    },
    {
      "matches": ["*://gbf-raidfinder.aikats.us/*"],
      "js": ["src/js/jquery-2.2.3.min.js", "src/js/popup.js", "rfcontentscript/RFOB.js", "rfcontentscript/RFMain.js"]
    }
  ]
}
